@model CareNet_System.Models.Patient
@attribute [Authorize]

@{
    ViewData["Title"] = "Add Patient";
}

<h1>Add New Patient</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="room_num" class="control-label"></label>
                <input asp-for="room_num" class="form-control" />
                <span asp-validation-for="room_num" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="treatment" class="control-label"></label>
                <select asp-for="treatment" class="form-control" asp-items="ViewBag.TreatmentList"></select>
                <span asp-validation-for="treatment" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="dept_id" class="control-label"></label>
                <select asp-for="dept_id" class="form-control" asp-items="ViewBag.DepartmentList"></select>
                <span asp-validation-for="dept_id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="followUp_doctorID" class="control-label"></label>
                <select asp-for="followUp_doctorID" class="form-control" asp-items="ViewBag.StaffList"></select>
                <span asp-validation-for="followUp_doctorID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>