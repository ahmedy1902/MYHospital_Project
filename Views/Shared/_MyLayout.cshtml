@{
    ViewData["Title"] = "Hospital system";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="icon" type="/image/x-icon" href="/assets/favicon.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="/css/styles.css" rel="stylesheet">
    <style>
        body {
            background: #121212;
            color: #ffffff;
            font-family: 'Poppins', sans-serif;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .navbar {
            background: rgba(40, 40, 40, 0.9);
            border-bottom: 2px solid #00d0ff;
        }

        .container {
            flex: 1;
        }

        .card {
            background: rgba(60, 60, 60, 0.9);
            border: none;
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0px 4px 10px rgba(255, 64, 129, 0.3);
            transition: transform 0.3s ease-in-out;
        }

            .card:hover {
                transform: scale(1.05);
            }

            .card i {
                font-size: 50px;
                color: #00d0ff;
            }

        footer {
            background: rgba(40, 40, 40, 0.9);
            padding: 15px;
            text-align: center;
            border-top: 2px solid #00d0ff;
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container px-lg-5">
            <a class="navbar-brand fs-4 fw-bold" href="/Home/Index">Hospital System</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Staffs" asp-action="Index">Staff</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Departments" asp-action="Index">Departments</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Patients" asp-action="Index">Patients</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Bills" asp-action="Index">Bills</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <header class="py-5 text-center" style="background-color: #6c757d; color: #ffffff;">
        <div class="container px-lg-5">
            <h1 class="display-5 fw-bold">Welcome to our Hospital manging system Project!</h1>
        </div>
    </header>

    <div class="container mt-5">
        @RenderBody() <!-- تأكد من وجود هذا السطر لعرض المحتوى -->
    </div>

    <section class="pt-4">
        <div class="container px-lg-5">
            <div class="row gx-lg-5">
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card text-center">
                        <i class="bi bi-house-door"></i>
                        <h2 class="fs-4 fw-bold">Home</h2>
                        <p>Go to the main page.</p>
                        <a class="btn btn-primary" href="/Home/Index">Go</a>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card text-center">
                        <i class="bi bi-shield-lock"></i>
                        <h2 class="fs-4 fw-bold">Privacy</h2>
                        <p>View privacy policies.</p>
                        <a class="btn btn-primary" href="/Home/Privacy">Go</a>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card text-center">
                        <i class="bi bi-people"></i>
                        <h2 class="fs-4 fw-bold">Staff</h2>
                        <p>Browse all Staff.</p>
                        <a class="btn btn-primary" href="/Staffs/Index">Go</a>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card text-center">
                        <i class="bi bi-building"></i>
                        <h2 class="fs-4 fw-bold">Departments</h2>
                        <p>View department listings.</p>
                        <a class="btn btn-primary" href="/Departments/Index">Go</a>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card text-center">
                        <i class="bi bi-card-checklist"></i>
                        <h2 class="fs-4 fw-bold">Patients</h2>
                        <p>Check Patients.</p>
                        <a class="btn btn-primary" href="/Patients/Index">Go</a>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card text-center">
                        <i class="bi bi-book"></i>
                        <h2 class="fs-4 fw-bold">Bills</h2>
                        <p>Explore Bills.</p>
                        <a class="btn btn-primary" href="/Bills/Index">Go</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <footer class="py-3">
        <div class="container">
            <p class="m-0 text-center text-white">&copy; 2025 - Hospital System - All Rights Reserved 🚀</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/scripts.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>